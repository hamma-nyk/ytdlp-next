{
  "version": 2,
  "builds": [
    { "src": "app/api/**/*.ts", "use": "@vercel/node" },
    { "src": "app/api/**/*.py", "use": "@vercel/python" },
    { "src": "next.config.ts", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/convert(.*)", "dest": "/app/api/convert/route.ts" },
    { "src": "/api/info", "dest": "/app/api/info.py" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
